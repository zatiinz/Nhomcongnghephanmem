@model IEnumerable<WeBQBCA.Data.User>
@{
    ViewData["Title"] = "Cấu hình hệ thống";
    Layout = "~/Views/Shared/_Admin.cshtml"; 
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col text-center">
            <h2 class="mb-3">Cấu hình hệ thống</h2>
            <p class="text-muted">Thực hiện chỉnh sửa các thông số hệ thống của QBCA</p>
        </div>
    </div>

    <form method="post" asp-action="CauHinhHeThong">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Tên hệ thống</label>
                <input type="text" name="SystemName" class="form-control" value="QBCA - Kiểm tra ngân hàng câu hỏi" />
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Email quản trị</label>
                <input type="email" name="AdminEmail" class="form-control" value="admin@qbca.edu.vn" />
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Số lần đăng nhập sai tối đa</label>
                <input type="number" name="MaxLoginAttempts" class="form-control" value="5" />
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Thời gian khoá tài khoản (phút)</label>
                <input type="number" name="LockoutDuration" class="form-control" value="15" />
            </div>

            <div class="col-md-12 mb-4">
                <label class="form-label">Thông báo hệ thống</label>
                <textarea name="SystemMessage" class="form-control" rows="3">Chào mừng bạn đến với hệ thống QBCA.</textarea>
            </div>

            <div class="col-md-12 text-end">
                <button type="submit" class="btn btn-primary">Lưu cấu hình</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </form>
</div>

