@using Microsoft.AspNetCore.Http
@{
    var username = Context.Session.GetString("Username");

}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - QBCA Giảng viên</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">QBCA Giảng viên</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="GiangVien" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="GiangVien" asp-action="Index">Danh sách câu hỏi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="GiangVien" asp-action="Create">Thêm câu hỏi</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (!string.IsNullOrEmpty(username))
                        {
                            <li class="nav-item">
                                <span class="navbar-text text-white">Xin chào, @username!</span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="Home" asp-action="Dangxuat">
                                    <button type="submit" class="btn btn-outline-light btn-sm ms-2">Đăng xuất</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="GiangVien" asp-action="Dangnhap">Đăng nhập</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="text-center text-muted py-3 border-top mt-4">
        © 2025 QBCA - Giảng viên
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
