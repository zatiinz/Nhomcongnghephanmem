@model IEnumerable<WeBQBCA.Data.Task>

@{
    ViewData["Title"] = "Nhiệm Vụ Được Giao";
    Layout = "~/Views/Shared/_TruongBoMon.cshtml"; // hoặc _GiangVien.cshtml nếu dùng layout riêng
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-clipboard-list me-2"></i> Nhiệm Vụ Được Giao
                    </h4>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">Đây là danh sách các nhiệm vụ được giao cho bạn.</p>

                    @if (Model == null || !Model.Any())
                    {
                        <div class="alert alert-info text-center" role="alert">
                            <i class="fas fa-info-circle me-2"></i> Bạn hiện không có nhiệm vụ nào được giao.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle">
                                <thead class="table-dark text-center">
                                    <tr>
                                        <th>Mô tả nhiệm vụ</th>
                                        <th>Môn học</th>
                                        <th>Hạn nộp</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.TaskDescription</td>
                                            <td>@item.Subject?.SubjectName</td>
                                            <td>@item.DueDate?.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @if (item.Status == "Đã hoàn thành")
                                                {
                                                    <span class="badge bg-success">@item.Status</span>
                                                }
                                                else if (item.Status == "Đang làm")
                                                {
                                                    <span class="badge bg-warning text-dark">@item.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@item.Status</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
