@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-3">
        @ViewBag.Message
    </div>
}

@{
    ViewData["Title"] = "Kiểm tra trùng lặp câu hỏi";
    Layout = "~/Views/Shared/_GiangVien.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form asp-action="KiemTraTrungLap" method="post">
                        <div class="mb-3">
                            <label for="cauHoiMoi" class="form-label">Nhập câu hỏi cần kiểm tra:</label>
                            <textarea name="cauHoiMoi" class="form-control" rows="3" required></textarea>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search me-2"></i>Kiểm tra trùng lặp
                            </button>
                        </div>
                    </form>

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-info mt-4 text-center">
                            @ViewBag.Message
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
