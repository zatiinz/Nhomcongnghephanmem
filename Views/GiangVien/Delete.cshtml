@model WeBQBCA.Data.Question

@{
    ViewData["Title"] = "Xoá câu hỏi";
    Layout = "~/Views/Shared/_GiangVien.cshtml";
}

<h2>@ViewData["Title"]</h2>

<h4>Bạn có chắc muốn xoá câu hỏi này không?</h4>
<div>
    <p><strong>QuestionText:</strong> @Model.QuestionText</p>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="QuestionId" />
        <button type="submit" class="btn btn-danger">Xoá</button>
        <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
    </form>
</div>

