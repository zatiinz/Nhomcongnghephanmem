@* Example View: Create.cshtml *@
@model WeBQBCA.Data.Question
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Thêm câu hỏi";
    Layout = "~/Views/Shared/_GiangVien.cshtml";
    var role = HttpContextAccessor?.HttpContext?.Session.GetString("Role") ?? "Giảng viên";
}

<div class="container mt-4">
    <h2 class="mb-4">Thêm câu hỏi mới</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="QuestionText" class="form-label"></label>
            <textarea asp-for="QuestionText" class="form-control" rows="3"></textarea>
            <span asp-validation-for="QuestionText" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SubjectId" class="form-label">Mã môn học</label>
            <input asp-for="SubjectId" class="form-control" />
            <span asp-validation-for="SubjectId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DifficultyLevel" class="form-label">Độ khó</label>
            <select asp-for="DifficultyLevel" class="form-select">
                <option value="">-- Chọn độ khó --</option>
                <option value="Dễ">Dễ</option>
                <option value="Trung bình">Trung bình</option>
                <option value="Khó">Khó</option>
            </select>
            <span asp-validation-for="DifficultyLevel" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Lưu câu hỏi</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

