@model WeBQBCA.Data.Question

@{
    ViewData["Title"] = "Thêm câu hỏi";
    Layout = "~/Views/Shared/_GiangVien.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="SubjectId"></label>
        <input asp-for="SubjectId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="QuestionText"></label>
        <textarea asp-for="QuestionText" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="DifficultyLevel"></label>
        <input asp-for="DifficultyLevel" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
</form>

