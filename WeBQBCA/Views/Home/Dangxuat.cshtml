@model WeBQBCA.Data.User
@{
    ViewData["Title"] = "Đăng xuất";
    Layout = "~/Views/Shared/_LgingLgout.cshtml";
}

<div class="logout-container">
    <div class="logout-card">
        <i class="fas fa-sign-out-alt logout-icon"></i>
        <h2>Đăng xuất thành công</h2>
        <p>Bạn đã đăng xuất khỏi hệ thống QBCA.</p>

        <div class="logout-actions">
            <a asp-controller="Home" asp-action="Dangnhap" class="btn btn-primary">
                <i class="fas fa-sign-in-alt"></i> Đăng nhập lại
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-home"></i> Về trang chủ
            </a>
        </div>
    </div>
</div>

<style>
    .logout-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 70vh;
    }

    .logout-card {
        text-align: center;
        padding: 30px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        max-width: 500px;
        width: 100%;
    }

    .logout-icon {
        font-size: 50px;
        color: #4361ee;
        margin-bottom: 20px;
    }

    .logout-actions {
        margin-top: 30px;
        display: flex;
        justify-content: center;
        gap: 15px;
    }
</style>