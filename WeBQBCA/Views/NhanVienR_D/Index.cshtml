@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Trang chủ Nhân Viên R_D";
    Layout = "~/Views/Shared/_NhanVienR_D.cshtml";
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username") ?? "NhanVienR_D";
    var role = HttpContextAccessor.HttpContext?.Session.GetString("Role") ?? "NhanVienR_D";
}
<main class="main-content">
    <header class="topbar">
        <div class="search-bar">
            <i class="fas fa-search search-icon"></i>
            <input type="search" class="search-input" placeholder="Tìm kiếm...">
        </div>

        <div class="topbar-actions">
            <button class="notification-btn">
                <i class="fas fa-bell"></i>
                <span class="notification-badge">3</span>
            </button>

            <div class="user-profile">
                <img src="https://ui-avatars.com/api/?name=@username&background=4361ee&color=fff" alt="User Avatar" class="user-avatar">
                <span class="user-name">@username</span>
                <i class="fas fa-chevron-down user-dropdown"></i>
            </div>
        </div>
    </header>
    
    <div class="content-area">
        <div id="content" class="container">
            <div class="welcome-section text-center mb-5">
                <h2>Chào mừng @username đến với khu vực nhân viên R&D</h2>
                <p class="text-muted">Bạn đang đăng nhập với quyền <strong>@role</strong></p>
            </div>

            <div class="row">
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-cloud-upload-alt fa-2x mb-2 text-primary"></i>
                            <h5 class="card-title">Tạo Môn Học</h5>
                            <p class="card-text">Tạo mã môn học mới cho ngân hàng câu hỏi.</p>
                            <a asp-controller="NhanVienR_D" asp-action="CreateSubject"class="btn btn-outline-primary btn-sm">Tạo Môn học Mói</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-history fa-2x mb-2 text-success"></i>
                            <h5 class="card-title">Thiết lập kế hoạch</h5>
                            <p class="card-text">Thiết lập kế hoạch câu hỏi, điều kiện câu hỏi.</p>
                            <a asp-controller="NhanVienR_D" asp-action="" class="btn btn-outline-success btn-sm">Xem Kế hoạch</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-star fa-2x mb-2 text-warning"></i>
                            <h5 class="card-title">Kiểm tra trùng lặp</h5>
                            <p class="card-text">Trả về Thôn tin danh sách có trùng lặp.</p>
                            <a asp-controller="NhanVienR_D" asp-action="KiemTraTrungLap" class="btn btn-outline-warning btn-sm">Kiển tra</a>
                        </div>
                    </div>
                </div>
              
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-check-circle fa-2x mb-2 text-info"></i>
                            <h5 class="card-title">Phê Duyệt Câu Hỏi</h5>
                            <p class="card-text">Thực hiện phê duyệt câu hỏi được thêm vào.</p>
                            <a asp-controller="NhanVienR_D" asp-action="PheDuyetCH" class="btn btn-outline-info btn-sm">Thực hiện</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body text-center">
                            <i class="fas fa-check-circle fa-2x mb-2 text-info"></i>
                            <h5 class="card-title">Phân công câu hỏi</h5>
                            <p class="card-text">Phân công câu hỏi cho người liên quan.</p>
                            <a asp-controller="NhanVienR_D" asp-action="" class="btn btn-outline-info btn-sm">Phân công</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
