@{
    ViewData["Title"] = "Đánh Giá Đề Thi";
    Layout = "~/Views/Shared/_GiangVien.cshtml";
}

<div class="content-area">
    <h2 class="mb-4">Đề thi chờ đánh giá</h2>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Mã đề</th>
                <th>Thông tin</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>DE123</td>
                <td>Đề thi môn Tiếng Anh - 40 câu - 60 phút</td>
                <td>
                    <button class="btn btn-primary btn-sm" onclick="alert('Mở đề thi thử...')">Làm thử</button>
                </td>
            </tr>
        </tbody>
    </table>

    <h2 class="mt-5">Gửi đánh giá</h2>
    <form onsubmit="submitReview(event)" class="mt-3">
        <div class="mb-3">
            <label for="feedback" class="form-label">Nhận xét:</label>
            <textarea id="feedback" class="form-control" rows="5" placeholder="Viết nhận xét của bạn..." required></textarea>
        </div>

        <div class="mb-3">
            <label for="rating" class="form-label">Mức đánh giá:</label>
            <select id="rating" class="form-select" required>
                <option value="">--Chọn--</option>
                <option value="1">Yếu</option>
                <option value="2">Trung bình</option>
                <option value="3">Khá</option>
                <option value="4">Tốt</option>
                <option value="5">Rất tốt</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success">Gửi đánh giá</button>
    </form>
</div>

@section Scripts {
    <script>
        function submitReview(e) {
            e.preventDefault();
            const feedback = document.getElementById("feedback").value;
            const rating = document.getElementById("rating").value;

            if (feedback && rating) {
                alert("Cảm ơn bạn đã đánh giá!");
                document.getElementById("feedback").value = "";
                document.getElementById("rating").value = "";
            }
        }
    </script>
}
