@model IEnumerable<WeBQBCA.Data.Question>

@{
    ViewData["Title"] = "Danh sách câu hỏi đã tạo";
    Layout = "~/Views/Shared/_GiangVien.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle me-1"></i> Thêm câu hỏi
        </a>
    </div>

    @if (TempData["Loi"] != null)
    {
        <div class="alert alert-danger">@TempData["Loi"]</div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nội dung</th>
                        <th>Môn học</th>
                        <th>Độ khó</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.QuestionId</td>
                                <td>@item.QuestionText</td>
                                <td>@(item.Subject?.SubjectName ?? "Chưa rõ")</td>
                                <td>@item.DifficultyLevel</td>
                                <td>
                                    <span class="badge bg-@(item.Status == "chờ duyệt" ? "warning" : "success")">
                                        @item.Status
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.QuestionId" class="btn btn-sm btn-warning me-1">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.QuestionId" class="btn btn-sm btn-danger"
                                       onclick="return confirm('Bạn có chắc muốn xoá câu hỏi này không?');">
                                        <i class="fas fa-trash-alt"></i> Xoá
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-danger">Bạn chưa tạo câu hỏi nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
